@model WinnersIndy.Model.ReportCreate

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ReportCreate</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ReportPeriod, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="ReportPeriod" value=" ReportPeriod" id="ReportPeriod" />
            @Html.ValidationMessageFor(model => model.ReportPeriod, "", new { @class = "text-danger" })

        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.TypeOfReport, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.TypeOfReport, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TypeOfReport, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ServiceUnitId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ServiceUnitId,Model.ServiceUnits,"Select Service Unit" , new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ServiceUnitId, "", new { @class = "text-danger" })
        </div>
    </div>
    

    <div class=" form-group">
        @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-2 colum-head-color" })
        <div class="col-md-10">
            <input type="file" name="File" id="image_file" />
            @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

