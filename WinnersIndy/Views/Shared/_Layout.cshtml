<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="body-Font">
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WinnersIndy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Pastor") || (User.IsInRole("Admin")))
                    {
                        <li class="li">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle menu" type="button" data-toggle="dropdown">
                                    Menus
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu men">
                                    <li>@Html.ActionLink("Member", "Index", "Member")</li>
                                    <li>@Html.ActionLink("Family", "Index", "Family")</li>
                                    <li>@Html.ActionLink("First Timer", "Index", "FirstTimer")</li>
                                    <li>@Html.ActionLink("Contact", "Index", "Contact")</li>
                                    <li>@Html.ActionLink("Service Unit", "Index", "ServiceUnit")</li>
                                    <li>@Html.ActionLink(" Reports", "FileDetails", "Report")</li>
                                    <li>@Html.ActionLink("Class Category", "Index", "ChildrenClass")</li>

                                    <li>@Html.ActionLink("Submit Report", "Create", "Report")</li>
                                </ul>
                            </div>
                        </li>


                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @if (User.IsInRole("Teacher"))
                    {

                        <li>@Html.ActionLink("Class Category", "Index", "ChildrenClass")</li>

                        <li>@Html.ActionLink("Submit Report", "Create", "Report")</li>

                    }
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>

                <div class="navbar-left" style="margin-top:8px;">
                    @using (Html.BeginForm("GetFamilyCheckin", "Family", FormMethod.Get))
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.TextBox("PhoneNumber", ViewBag.CurrentFilter as string)</li>
                            <li><input type="submit" value="Search" /></li>
                        </ul>
                    }
                </div>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content whole">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Winners Chapel Indianapolis</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    .li {
        padding-top: 8px;
    }
    .men{
        background-color:lightskyblue
    }
    .body-Font {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }
</style>
